{
    "compilerOptions": {
      "target": "ES6",
      "strict": true,
      "noFallthroughCasesInSwitch": true,
      "module": "ES6",
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "sourceMap": true,
      "allowJs": true,
      "lib": [
        "ES2017",
        "dom"
      ],
      "rootDir": "./",
      "moduleResolution": "node"
    },
  "exclude": [
    "node_modules",
    "*.config.js",
    "src/tests/**/*",
    "dist/**/*",
    "src/temp*.js",
    "react-docs/**/*",
    "https-server/**/*",
    "sockets-server/**/*"
  ]
}
